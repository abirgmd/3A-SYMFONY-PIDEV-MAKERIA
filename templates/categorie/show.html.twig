{% extends 'dashboard.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Category Details</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ categorie.id }}</td>
                        </tr>
                        <tr>
                            <th>Nomcat</th>
                            <td>{{ categorie.nomcat }}</td>
                        </tr>
                        <tr>
                            <th>Descriptioncat</th>
                            <td>{{ categorie.descriptioncat }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="actions mt-3">
                <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary">Back to List</a>
                <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning">Edit</a>
                {{ include('categorie/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
