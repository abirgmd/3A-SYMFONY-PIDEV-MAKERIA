<form method="post" action="{{ path('app_reply_delete', {'id': reply.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reply.id) }}">
    <button class="btn btn-delete">
        <i class="fa fa-trash"></i> Supprimer
    </button>
</form>
