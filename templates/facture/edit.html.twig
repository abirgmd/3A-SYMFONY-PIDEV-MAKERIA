{% extends 'dashboard.html.twig' %}

{% block title %}Modifier une facture{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Modifier la facture</h4>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'form-styled', 'id': 'editFactureForm'}}) }}

            <div class="form-container">
                {% for field in form %}
                    <div class="form-group">
                        <label for="{{ field.vars.id }}">
                            <strong>{{ field.vars.label|default(field.vars.name|capitalize) }}</strong>
                        </label>

                        {# Render the form field with Bootstrap styling #}
                        {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}

                        {# Display validation errors if any #}
                        {% if field.vars.errors|length > 0 %}
                            <div class="alert alert-danger mt-2">
                                {% for error in field.vars.errors %}
                                    <p>{{ error.message }}</p>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}

                <div class="form-actions mt-4">
                    <button type="submit" class="btn btn-primary" onclick="return validateForm()">Enregistrer</button>
                    <a href="{{ path('app_facture_index') }}" class="btn btn-secondary">Retour Ã  la liste</a>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
